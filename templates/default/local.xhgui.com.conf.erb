<VirtualHost *:80>
  ServerName local.xhgui.com
  DocumentRoot /var/www/html/local.xhgui.com/webroot

  <Directory /var/www/html/local.xhgui.com/webroot>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride FileInfo
    Require all granted
  </Directory>

  # Possible values: debug, info, notice, warn, error, crit,
  # alert, emerg.
  LogLevel warn
  ErrorLog /var/log/apache2/local.xhgui.error-log
  CustomLog /var/log/apache2/local.xhgui.access-log combined
</VirtualHost>
